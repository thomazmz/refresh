{
  "moduleFileExtensions": ["ts", "js"],
  "maxWorkers": 1,
  "rootDir": "./src",
  "testMatch": ["**/*.test.ts"],
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.json"
    }
  },
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@refresh/framework/(.+)$": "<rootDir>/$1/library.ts"
  }
}